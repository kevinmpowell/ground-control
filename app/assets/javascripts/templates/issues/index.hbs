<h1>{{visible}} {{inflection}}</h1>
<ul class="issue-list">
	{{#each}}
		<li {{bind-attr class=":issue-list-item state client_name"}} data-issue-id="{{id}}">
			<h2 class="issue-list-item-title"><a href="{{html_url}}">{{title}}</a></h2>
			<span class="issue-list-item-number">#{{number}}</span>
			<!--<p>{{body}}</p>-->
			<a href="http://github.com/{{repo_name}}">{{repo_name}}</a><br/>
			
			{{#if closed}}
				<label>{{input type="checkbox" checked=archived class="toggle"}} Archive This Issue</label>
			{{/if}}
		</li>
	{{/each}}
</ul>